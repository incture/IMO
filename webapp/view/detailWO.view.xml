					visible="{path:'oWorkOrderDetailModel>/OrderStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnSetPrintBtnVisible'}"></Button>
			</Toolbar>
			<OverflowToolbar class="sapUiTinyMarginTopBottom sapUiTinyMarginEnd tableHeaderBg">
				<Label text="{i18n>WO_DETAILS}" class="sapUiSmallMarginBegin" wrapping="true"/>
				<core:Icon src="sap-icon://navigation-right-arrow" class="sapUiTinyMarginBegin iconSize1" color="#96999b"></core:Icon>
				<Label text="{i18n>WO_NUMBER1}" class="sapUiTinyMarginBegin murphyLabelColor"/>
				<Text text="{oWorkOrderDetailModel>/Orderid}" class="murphyLabelColor"/>
				<ToolbarSpacer/>
				<Text text="{i18n>SYS_STATUS} :" class="sapUiSmallMarginBegin panelTextColor1"/>
				<Text class="panelTextColor"
					text="{parts:['oWorkOrderDetailModel>/OrderStatus', 'oUserDetailModel>/userRole', 'oUserDetailModel>/woStatus'], formatter:'com.sap.incture.IMO_PM.formatter.formatter.formatWOStatusTxt'}"></Text>
				<Text text="User Status :" class="sapUiSmallMarginBegin panelTextColor1"/>
				<ComboBox showSecondaryValues="true" selectedKey="{oWorkOrderDetailModel>/UserStatus}" class="inputRadius sapUiSmallMarginEnd" width="7%">
					<core:ListItem key="INIT" additionalText="Initial" text="INIT"/>
					<core:ListItem key="INPN" additionalText="In Processing" text="INPN"/>
					<core:ListItem key="HOLD" additionalText="Initial" text="HOLD"/>
					<core:ListItem key="COMP" additionalText="Completed" text="COMP"/>
				</ComboBox>
			</OverflowToolbar>
			<ScrollContainer height="calc(100vh - 12rem)" vertical="true">
				<l:Grid>
					<l:content>
						<VBox class="sapMParentGridBroder sapUiTinyMarginBeginEnd">
							<core:Fragment fragmentName="com.sap.incture.IMO_PM.fragment.headerDetails" type="XML"/>
							<layoutData>
								<l:GridData span="XL12 L12 M12 S12"/>
							</layoutData>
						</VBox>
						<VBox class="sapMParentGridBroder sapUiTinyMarginBeginEnd sapUiMediumMarginTop">
							<core:Fragment fragmentName="com.sap.incture.IMO_PM.fragment.workOrderDetails" id="idOperationsMaterialPanelWO" type="XML"/>
							<layoutData>
								<l:GridData span="XL12 L12 M12 S12"/>
							</layoutData>
						</VBox>
