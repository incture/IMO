<mvc:View controllerName="com.sap.incture.IMO_PM.controller.reviewWorkOrder" xmlns="sap.ui.table" xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m" xmlns:u="sap.ui.unified" xmlns:core="sap.ui.core" xmlns:commons="sap.ui.commons" xmlns:l="sap.ui.layout" xmlns:tnt="sap.tnt">
	<m:Page showHeader="true" class="sapUiSizeCompact sapMPageBackground" enableScrolling="true">
		<tnt:ToolHeader class="headerBG headerShadow">
			<m:Label design="Bold" class="sapUiSmallMarginBegin textColr" text="{i18n>tile_reviewWO}" wrapping="true"/>
		</tnt:ToolHeader>
		<m:content>
			<TreeTable class="sapUiSmallMargin tableCellNoBorder TableHeaderWhiteBG" id="idreviewTreeTable"
				rows="{path:'/', parameters: {arrayNames:['oprns']}}" selectionMode="None" enableSelectAll="false"
				visibleRowCount="{mLookupModel>/rowCount}" visibleRowCountMode="Fixed" ariaLabelledBy="title" fixedColumnCount="2" rowHeight="45rem"
				toggleOpenState="onExpandCollapse" filter="onFilterColumn">
				<extension>
					<m:OverflowToolbar class="tableHeaderBG tableMargin" height="3rem">
						<m:Title id="title" text="{i18n>revTable} ({mLookupModel>/aWorkOrderListSet/0/Totalrecords} WO's)" class="styleTableTitle"/>
						<m:ToolbarSpacer/>
						<core:Icon src="sap-icon://table-column" tooltip="Add/Remove Column" color="#142e5e" class="sapUiSmallMarginEnd attachmentsIconSize"
							press="onPressColumnAdd"/>
						<core:Icon src="sap-icon://filter" press="reviewWOAdvFilterPanelOpen" tooltip="Open Filters" color="#142e5e"
							class="sapUiSmallMarginEnd attachmentsIconSize"/>
						<!--<m:Link text="{i18n>advFilter}" press="onHandleAdvFilterWO"/>-->
						<m:SearchField width="25%" value="{mLookupModel>/sWorderIdDesFilter}" class="sapUiSearchBorderCls" search="onSearchWO"
							placeholder="{i18n>searchbyWorkOrderIdDes}"/>
					</m:OverflowToolbar>
					<m:Panel class="filterWrapperPanel tableMargin panelBackgroundClass" id="filterWrapPanelReviewWO" expandAnimation="true" expandable="true" expanded="false">
						<m:content>
							<core:Fragment fragmentName="com.sap.incture.IMO_PM.fragment.advanceFilterReviewWO" type="XML"></core:Fragment>
						</m:content>
					</m:Panel>
					<m:Toolbar class="tableHeaderBG tableHeaderBg" height="3rem">
						<!--<m:ToolbarSpacer/>-->
						<m:Button class="tableHeadertansparentBtn" text="{i18n>TecoWO}" press="onOpenDigitalSignPopup"
							visible="{path:'mLookupModel>/userRole', formatter:'com.sap.incture.IMO_PM.formatter.formatter.disableReviewField'}"/>
					</m:Toolbar>
				</extension>
				<columns>
					<Column width="2.5rem">
						<m:Text text="" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="" wrapping="false"/>
						</template>
					</Column>
					<Column width="5rem">
						<m:Text text="" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:CheckBox select="onSelectCheckBox" class="tableContentText" text="" visible="{= ${Activity} ? false:true}" selected="{checked}"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sType}">
						<m:Text text="Type" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{OrderType}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sOrderId}">
						<m:Text text="Order" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Link text="{Orderid}" press="onViewWO" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="12rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sFunctLoc}">
						<m:Text text="{i18n>FunLoc}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{FunctLoc}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sEquip}">
						<m:Text text="{i18n>equip}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{Equipment}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="8rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sDate}">
						<m:Text text="Created Date" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text class="tableContentText" text="{path:'EnterDate',formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnDateConversion'}"
								wrapping="false"/>
						</template>
					</Column>
					<Column width="10rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sAssTechName}">
						<m:Text text="{i18n>assTech}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{Technicianname}" class="tableContentText"/>
						</template>
					</Column>
					<Column width="11rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sAssembly}">
						<m:Text text="{i18n>Assemb}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{AssemblyDes}" tooltip="{AssemblyDes}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sMnWkCtr}">
						<m:Text text="WorkCenter" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{MnWkCtr}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sPlant}">
						<m:Text text="Plant" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{Planplant}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sBDown}">
						<m:Text text="{i18n>BDown}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{Bdflag}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="8rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sOprn}">
						<m:Text text="{i18n>oprn}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{Activity}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="15rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sWoComments}">
						<m:Text text="{i18n>WOComm}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{WOLongText}" tooltip="{WOLongText}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sSysCond}">
						<m:Text text="{i18n>syscond}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text class="tableContentText" text="{parts:['Systcond','Activity'],formatter:'com.sap.incture.IMO_PM.formatter.formatter.styleSysCondn'}"
								wrapping="false"/>
						</template>
					</Column>
					<Column width="4rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sFC}">
						<m:Text text="{i18n>FC}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text class="tableContentText" text="{path:'SystemStatusText',formatter:'com.sap.incture.IMO_PM.formatter.formatter.styleFC'}"
								wrapping="false"/>
						</template>
					</Column>
					<Column width="5rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sCompOnTime}">
						<m:Text text="{i18n>compOnTime}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text class="tableContentText" text="{path:'ActEndDate',formatter:'com.sap.incture.IMO_PM.formatter.formatter.styleComonTime'}"
								wrapping="false"/>
						</template>
					</Column>
					<Column width="15rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sOprnShortText}">
						<m:Text text="{i18n>oprnSText}" tooltip="{i18n>oprnSText}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{Description}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="12rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sOprnLtext}">
						<m:Text text="{i18n>oprnLText}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Button icon="sap-icon://display" class="LTextButton" type="Transparent" tooltip="show confirmation long text"
								enabled="{parts:['Activity','oprnLText'],formatter:'com.sap.incture.IMO_PM.formatter.formatter.styleCNFLongText'}"
								visible="{path:'Orderid',formatter:'com.sap.incture.IMO_PM.formatter.formatter.fnDisableOperLText'}" press="onLongTextPress"/>
						</template>
					</Column>
					<Column width="10rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sLText}">
						<m:Text text="{i18n>LText}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{OperationLtext}" tooltip="{OperationLtext}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sBDHours}">
						<m:Text text="{i18n>BDownHours}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text class="tableContentText"
								text="{parts:['Activity','Bdflag','BDownHours'],formatter:'com.sap.incture.IMO_PM.formatter.formatter.styleBDownHours'}" wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sLabHours}">
						<m:Text text="{i18n>labHours}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text class="tableContentText"
								text="{parts:['WorkActual','Activity'],formatter:'com.sap.incture.IMO_PM.formatter.formatter.styleLabHours'}" wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sSpareParts}">
						<m:Text text="{i18n>SPartsReq}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{ReqQty}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sSparePartsIss}">
						<m:Text text="{i18n>SPartsIss}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text class="tableContentText" text="{parts:['ReqQty','IssuesQty'],formatter:'com.sap.incture.IMO_PM.formatter.formatter.styleSPartsIss'}"
								wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sSparePartsReturned}">
						<m:Text text="{i18n>SPartsRet}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{RetQty}" class="tableContentText" wrapping="false"/>
						</template>
					</Column>
					<Column width="6rem" visible="{mLookupModel>/oReviewTecoColumnVisible/sIsAttachment}">
						<m:Text text="{i18n>isAttach}" wrapping="true" class="tableHeaderText"/>
						<template>
							<m:Text text="{parts:['Hasattach','Activity'],formatter:'com.sap.incture.IMO_PM.formatter.formatter.styleAttach'}" class="tableContentText"
								wrapping="false"/>
						</template>
					</Column>
				</columns>
			</TreeTable>
		</m:content>
		<!--<m:footer>
			<m:Toolbar class="tableHeaderBg">
				<m:ToolbarSpacer/>
				<m:Button text="{i18n>TecoWO}" press="onOpenDigitalSignPopup" class="murphyCreateBtn"
					visible="{path:'mLookupModel>/userRole', formatter:'com.sap.incture.IMO_PM.formatter.formatter.disableReviewField'}"/>
			</m:Toolbar>
		</m:footer>-->
	</m:Page>
</mvc:View>