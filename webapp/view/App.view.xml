<mvc:View controllerName="com.sap.incture.IMO_PM.controller.App" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:tnt="sap.tnt" xmlns:core="sap.ui.core">
	<tnt:ToolPage sideExpanded="false" id="idToolPage">
		<tnt:sideContent>
			<tnt:SideNavigation id="idSideNavigation" class="NavItemSelect crtIconSizeSideNav iopV2SidePanelBgColor iopV2SidePanelNoBorder iopV2SidePanelRightBorder">
				<tnt:NavigationList
					class="iopV2SidePanelTextIconColor iopV2SidePanelSelected iopV2SidePanelBgColor iopV2SidePanelNoBorder iopV2SidePanelMargin"
					items="{oMasterModel>/tabs}" id="idNavList">
					<tnt:NavigationListItem text="{oMasterModel>tabText}" icon="{oMasterModel>icon}" expanded="false" visible="{oMasterModel>isVis}"
						select="onSideNavSelect" class="NavItemSelect"/>
				</tnt:NavigationList>
				<tnt:footer>
					<tnt:NavigationList class="iopV2SidePanelTextIconColor iopV2SidePanelBgColor iopV2SidePanelNoBorder iopV2SidePanelMargin lockText">
						<tnt:NavigationListItem tooltip="{= ${oMasterModel>/isLocked} === true? 'Unlock Panel' : ''}" class="NavItemSelect"
							icon="{= ${oMasterModel>/isLocked} === true? 'sap-icon://locked' : 'sap-icon://unlocked'}"
							text="{= ${oMasterModel>/isLocked} === true? '' : 'Lock Panel'}" select="onLockSideNav"></tnt:NavigationListItem>
					</tnt:NavigationList>
				</tnt:footer>
			</tnt:SideNavigation>
		</tnt:sideContent>
		<tnt:mainContents>
			<NavContainer width="100%" height="100%">
				<App id="oApp"/>
			</NavContainer>
		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>