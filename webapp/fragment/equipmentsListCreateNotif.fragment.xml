<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" class="sapUiSizeCompact">
	<Dialog title="{}" contentWidth="50%" contentHeight="80%" showHeader="false" verticalScrolling="false" class="sapUiSizeCompact">
		<content>
			<IconTabBar select="handleEquipIconTabSelect" class="iconTabHeader">
				<items>
					<IconTabFilter text="{i18n>SEARCH_EQUIPMENT}" key="idSearchEq">
						<l:Grid defaultSpan="L6 M6 S12">
							<VBox>
								<Label text="{i18n>TECHNICAL_ID}" class="sapUiTinyMarginTop"></Label>
								<Input class="inputRadius" placeholder="{i18n>TECH_ID_PLACEHOLDER}" submit="onSearchEquipments" value="{oNotificationViewModel>/TechId}" width="100%"></Input>
							</VBox>
							<VBox>
								<Label text="{i18n>EQUIPMENT_ID}" class="sapUiTinyMarginTop"></Label>
								<Input class="inputRadius" placeholder="{i18n>SEARCH_EQUIP_PLACEHOLDER}" submit="onSearchEquipments" value="{oNotificationViewModel>/EqIdDes}"></Input>
							</VBox>
						</l:Grid>
						<ScrollContainer height="20rem" vertical="true" focusable="false" class="sapUiSmallMarginTop">
							<Table sticky="ColumnHeaders" mode="SingleSelectLeft" selectionChange="onEquipSelect" growing="false" items="{path: 'mLookupModel>/aEquipmentsList'}" class="tableCellNoBorder TableHeaderWhiteBG">
								<headerToolbar>
									<OverflowToolbar height="2rem">
										<content>
											<Text text="{i18n>EQUI_LIST}"/>
										</content>
									</OverflowToolbar>
								</headerToolbar>
								<columns>
									<Column>
										<Text text="{i18n>EQUIPMENT_ID}"/>
									</Column>
									<Column>
										<Text text="{i18n>TECHNICAL_ID}"/>
									</Column>
									<Column>
										<Text text="{i18n>EQUIP_DESC}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells >
											<Text text="{mLookupModel>Equnr}"/>
											<Text text="{mLookupModel>Tidnr}"/>
											<Text text="{mLookupModel>Eqktu}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>
					<!--nischal - icontabfilter is included to show equipment list of corresponding functional location-->
					<IconTabFilter text="{i18n>equip_List}" key="idEqFunLoc" visible="{= ${oNotificationDataModel>/FunctLoc} === '' ? false : true}">
						<ScrollContainer height="25rem" vertical="true" focusable="false">
							<HBox class="sapUiTinyMarginTopBottom">
								<Label design="Bold" text="{i18n>FUNC_LOCATION}" class="sapUiTinyMarginEnd"/>
								<Text text="{oNotificationDataModel>/FunctLoc}"/>
							</HBox>
							<Table mode="SingleSelectLeft" selectionChange="onEquipSelect" growing="false" items="{path: 'mLookupModel>/aEqListOfFunLoc'}"
								 class="tableCellNoBorder TableHeaderWhiteBG" sticky="ColumnHeaders">
								<columns>
									<Column width="{= ${device>/system/tablet} === true ? '6rem' : 'auto' }">
										<Text text="{i18n>EQUIPMENT_ID}"/>
									</Column>
									<Column width="{= ${device>/system/tablet} === true ? '6rem' : 'auto' }">
										<Text text="{i18n>TECHNICAL_ID}"/>
									</Column>
									<Column width="{= ${device>/system/tablet} === true ? '12rem' : 'auto' }">
										<Text text="{i18n>EQUIP_DESC}"/>
									</Column>
									<!--<Column width="{= ${device>/system/tablet} === true ? '6rem' : 'auto' }">-->
									<!--	<Text text="{i18n>FUNCTIONAL_LOCATION}"/>-->
									<!--</Column>-->
								</columns>
								<items>
									<ColumnListItem>
										<cells >
											<Text text="{mLookupModel>Equnr}"/>
											<Text text="{mLookupModel>Tidnr}"/>
											<Text text="{mLookupModel>Eqktu}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>
					<!--nischal - icontabfilter is included to show equipment list of corresponding functional location-->
					<IconTabFilter text="{i18n>FAV_EQUIP}" key="idFav">
						<SearchField liveChange="onSearchFavEqips" width="100%" class="sapUiSmallMarginBottom sapSearchFieldBorderClass" placeholder="{i18n>SEARCH_EQUIP_PLACEHOLDER}"/>
						<ScrollContainer height="20rem" vertical="true" focusable="false">
							<Table sticky="ColumnHeaders" mode="SingleSelectLeft" selectionChange="onEquipSelect" items="{path: 'mLookupModel>/aFavEquipList'}" class="tableCellNoBorder TableHeaderWhiteBG">
								<headerToolbar>
									<OverflowToolbar height="2rem">
										<content>
											<Text text="{i18n>EQUI_LIST}"/>
										</content>
									</OverflowToolbar>
								</headerToolbar>
								<columns>
									<Column>
										<Text text="{i18n>EQUIPMENT_ID}"/>
									</Column>
									<Column>
										<Text text="{i18n>TECHNICAL_ID}"/>
									</Column>
									<Column>
										<Text text="{i18n>EQUIP_DESC}"/>
									</Column>
									<Column>
										<Text text="{i18n>FUNCTIONAL_LOCATION}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells >
											<Text text="{mLookupModel>Equnr}"/>
											<Text text="{mLookupModel>Tidnr}"/>
											<Text text="{mLookupModel>Eqktu}"/>
											<Text text="{mLookupModel>Tplnr}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<beginButton>
			<Button text="{i18n>CANCEL}" press="onCancelDialogEquip" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline" iconFirst="true"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>SEARCH}" press="onSearchEquipments" type="Emphasized"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition >