			<Button text="{i18n>cancel}" press="onCancelDialogNotif" class="murphyClearBtn"/>
			<Button class="murphyClearBtn" text="{i18n>CLEAR}" press="onClearNotifFilter"/>
			<Button text="{i18n>save}" class="murphyDialogBtn" press="onSaveNotifFilter"/>
			<Button text="Apply" press="onApplyFilterNotif" class="murphyDialogBtn"/>
		</buttons>
	</Dialog>-->
</core:FragmentDefinition >