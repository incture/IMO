<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" class="sapUiSizeCompact">
	<Dialog title="{}" contentWidth="50%" contentHeight="80%" showHeader="false" verticalScrolling="false" class="dialogHeader sapUiSizeCompact">
		<content>
			<IconTabBar select="handleEquipIconTabSelect" class="iconTabHeader">
				<items>
					<IconTabFilter text="{i18n>searchEq}" key="idSearchEq">
						<l:Grid defaultSpan="L6 M6 S12" class="sapUiTinyMarginBottom">
							<VBox>
								<Label text="{i18n>TECH_ID}" class="sapUiTinyMarginTop"></Label>
								<Input class="inputRadius" placeholder="{i18n>searchTechId}" submit="onSearchEquipments" value="{mLookupModel>/TechId}" width="100%">
									<customData>
										<core:CustomData value="INTEGER"/>
									</customData>
								</Input>
							</VBox>
							<VBox>
								<Label text="{i18n>equip}" class="sapUiTinyMarginTop"></Label>
								<Input class="inputRadius" placeholder="{i18n>searchbyIDDes}" submit="onSearchEquipments" value="{mLookupModel>/EqIdDes}" width="100%">
									<customData>
										<core:CustomData value="INTEGER"/>
									</customData>
								</Input>
							</VBox>
						</l:Grid>
						<ScrollContainer height="20rem" vertical="true" focusable="false">
							<Table sticky="ColumnHeaders" class="tableCellNoBorder TableHeaderWhiteBG" mode="SingleSelectLeft" selectionChange="onEquipSelect"
								growing="false" items="{path: 'mLookupModel>/aEquipmentsList'}">
								<columns>
									<Column>
										<Text text="{i18n>equipId}"/>
									</Column>
									<Column>
										<Text text="{i18n>techId}"/>
									</Column>
									<Column>
										<Text text="{i18n>equipDes}"/>
									</Column>
									<Column>
										<Text text="{i18n>FUN_LOC}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells >
											<Text text="{mLookupModel>Equnr}"/>
											<Text text="{mLookupModel>Tidnr}"/>
											<Text text="{mLookupModel>Eqktu}"/>
											<Text text="{mLookupModel>Tplnr}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
							<Toolbar visible="{path:'mLookupModel>/aEquipmentsList',formatter:'com.sap.incture.IMO_PM.formatter.formatter.showLoadMore'}">
								<ToolbarSpacer/>
								<Link class="sapUiSmallMarginEnd" text="{i18n>LOAD_MORE}" press="handleLoadEquips"/>
							</Toolbar>
						</ScrollContainer>
					</IconTabFilter>
					<!--nischal - icontabfilter is included to show equipment list of corresponding functional location-->
					<IconTabFilter text="{i18n>equip_List}" key="idEqFunLoc" visible="{= ${mLookupModel>/sFunLoc} === '' ? false : true}">
						<ScrollContainer height="25rem" vertical="true" focusable="false">
							<HBox class="sapUiTinyMarginTopBottom">
								<Label design="Bold" text="{i18n>FUNC_LOCATION}" class="sapUiTinyMarginEnd"/>
								<Text text="{mLookupModel>/sFunLoc}"/>
							</HBox>
							<Table sticky="ColumnHeaders" class="tableCellNoBorder TableHeaderWhiteBG" mode="SingleSelectLeft" selectionChange="onEquipSelect"
								growing="false" items="{path: 'mLookupModel>/aEqListOfFunLoc'}">
								<columns>
									<Column width="{= ${device>/system/tablet} === true ? '6rem' : 'auto' }">
										<Text text="{i18n>EQUIPMENT_ID}"/>
									</Column>
									<Column width="{= ${device>/system/tablet} === true ? '6rem' : 'auto' }">
										<Text text="{i18n>TECHNICAL_ID}"/>
									</Column>
									<Column width="{= ${device>/system/tablet} === true ? '12rem' : 'auto' }">
										<Text text="{i18n>EQUIP_DESC}"/>
									</Column>
									<!--<Column width="{= ${device>/system/tablet} === true ? '6rem' : 'auto' }">-->
									<!--	<Text text="{i18n>FUNCTIONAL_LOCATION}"/>-->
									<!--</Column>-->
								</columns>
								<items>
									<ColumnListItem>
										<cells >
											<Text text="{mLookupModel>Equnr}"/>
											<Text text="{mLookupModel>Tidnr}"/>
											<Text text="{mLookupModel>Eqktu}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>
					<!--nischal - icontabfilter is included to show equipment list of corresponding functional location-->
					<IconTabFilter text="{i18n>favEq}" key="idFav">
						<SearchField search="onSearchFavEqips" width="100%" class="sapUiSmallMarginBottom" placeholder="{i18n>searchbyIDDes}">
							<customData>
								<core:CustomData value="INTEGER"/>
							</customData>
						</SearchField>
						<ScrollContainer height="20rem" vertical="true" focusable="false">
							<Table sticky="ColumnHeaders" class="tableCellNoBorder TableHeaderWhiteBG" mode="SingleSelectLeft" selectionChange="onEquipSelect"
								growing="false" items="{path: 'mLookupModel>/aFavEquipList'}">
								<columns>
									<Column>
										<Text text="{i18n>equipId}"/>
									</Column>
									<Column>
										<Text text="{i18n>techId}"/>
									</Column>
									<Column>
										<Text text="{i18n>equipDes}"/>
									</Column>
									<Column>
										<Text text="{i18n>FUN_LOC}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells >
											<Text text="{mLookupModel>Equnr}"/>
											<Text text="{mLookupModel>Tidnr}"/>
											<Text text="{mLookupModel>Eqktu}"/>
											<Text text="{mLookupModel>Tplnr}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<beginButton>
			<Button text="{i18n>CANCEL}" press="onCancelDialogEquip" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline"
				iconFirst="true"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>SEARCH}" press="onSearchWOFilter" type="Emphasized"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition >