<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" class="sapUiSizeCompact" xmlns:table="sap.ui.table">
	<Dialog contentHeight="50%" contentWidth="50%" title="{i18n>Assign_tech}" class="sapUiSizeCompact dialogHeader">
		<content>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button text="{i18n>Add_Tech}" press="fnAddOperTech" />
				<Button text="{i18n>Remove_tech}" type="Reject" press="c" />
			</OverflowToolbar>
			<table:Table selectionMode="MultiToggle" rows="{mLookupModel>/aOperationTechList}" class="sapUiTinyMargin" id="idIMOOperTechTable">
				<table:columns>
					<table:Column defaultFilterOperator="Contains">
						<Text class="tableHeaderText" text="{i18n>WRK_CTR}"/>
						<table:template>
							<Text text="{mLookupModel>OperWrkCtr}" ></Text>
						</table:template>
					</table:Column>
					<table:Column>
						<Text class="tableHeaderText" text="{i18n>Technician}"/>
						<table:template>
							<ComboBox selectedKey="{mLookupModel>/OperAssignTech}" items="{mLookupModel>/aWrkCtrTech}" class="inputRadius">
								<core:Item text="{mLookupModel>OperTechName}" key="{mLookupModel>OperTechName}"/>
							</ComboBox>
						</table:template>
					</table:Column>
					<table:Column>
						<Text class="tableHeaderText" text="{i18n>Available_hours}"/>
						<table:template>
							<Text text="{mLookupModel>TechAvailHrs}"></Text>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
		</content>
		<beginButton>
			<Button text="{i18n>cancel}" press="onCloseControlKeyDialog" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline"
				iconFirst="true"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>Save}" press="onCloseControlKeyDialog" type="Emphasized"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition >