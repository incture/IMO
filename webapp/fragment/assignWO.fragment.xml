<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" class="sapUiSizeCompact">
	<Dialog contentHeight="50%" contentWidth="40%" title="{i18n>assignto}" verticalScrolling="false" class="dialogHeader">
		<content>
			<SearchField search="onSearchUser" width="98%" placeholder="{i18n>searchuser}" class="sapUiTinyMargin"/>
			<ScrollContainer height="100%" vertical="true" horizontal="false" focusable="false" class="sapUiTinyMargin">
				<Table mode="SingleSelectLeft" items="{path: 'mLookupModel>/aUsers'}">
					<columns>
						<Column></Column>
						<Column></Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells >
								<Text text="{mLookupModel>Bname}"/>
								<Text text="{mLookupModel>NameTextc}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</content>
		<beginButton>
			<Button text="Cancel" press="onCancelDialogAssign" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline" iconFirst="true"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>ASSIGN}" press="onOpenDigitalSignPopup" type="Emphasized"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition >