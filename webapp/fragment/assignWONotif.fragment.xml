<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" class="sapUiSizeCompact dialogHeader">
	<Dialog title="{i18n>ASSIGN}" contentWidth="40%" verticalScrolling="false" class="sapUiSizeCompact dialogHeader">
		<content>
			<SearchField search="onSearchWorkOrders" width="98%" placeholder="{i18n>searchWO}" class="sapSearchFieldBorderClass sapUiTinyMargin"/>
			<ScrollContainer height="15rem" vertical="true" horizontal="false" focusable="false" class="sapUiTinyMargin">
				<Table mode="SingleSelectLeft" items="{mLookupModel>/aWorkOrders}" id="NOTIF_ASSIGN_WO">
					<columns>
						<Column><Text text="{i18n>WONum}"/></Column>
						<Column><Text text="{i18n>WODes}"/></Column>
					</columns>
					<items>
						<ColumnListItem>
							<cells >
								<Text text="{mLookupModel>Orderid}"/>
								<Text text="{mLookupModel>WoDes}"/>
							</cells>
						</ColumnListItem>
					</items>
				</Table>
			</ScrollContainer>
		</content>
		<beginButton>
			<Button text="{i18n>cancel}" press="onCancelDialogAssign" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline" iconFirst="true"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>assign}" press="onAssignNotifToWO" type="Emphasized"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition >