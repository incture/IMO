<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" class="sapUiSizeCompact">
	<Dialog title="{}" contentWidth="50%" contentHeight="80%" showHeader="false" verticalScrolling="false" class="sapUiSizeCompact">
		<content>
			<IconTabBar select="handleEquipIconTabSelect" class="iconTabHeader">
				<items>
					<IconTabFilter text="{i18n>favEq}" key="idFav">
						<SearchField liveChange="onSearchFavEqips" width="100%" class="sapUiSmallMarginBottom sapSearchFieldBorderClass" placeholder="{i18n>searchbyIDDes}"/>
						<ScrollContainer height="20rem" vertical="true" focusable="false">
							<Table class="tableCellNoBorder TableHeaderWhiteBG" sticky="ColumnHeaders" mode="SingleSelectLeft" selectionChange="onEquipSelect" growing="false" items="{path: 'mLookupModel>/aFavEquipList'}">
								<columns>
									<Column>
										<Text text="{i18n>equipId}"/>
									</Column>
									<Column>
										<Text text="{i18n>techId}"/>
									</Column>
									<Column>
										<Text text="{i18n>EqDes}"/>
									</Column>
									<Column>
										<Text text="{i18n>FUN_LOC}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells >
											<Text text="{mLookupModel>Equnr}"/>
											<Text text="{mLookupModel>Tidnr}"/>
											<Text text="{mLookupModel>Eqktu}"/>
											<Text text="{mLookupModel>Tplnr}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>
					<IconTabFilter text="{i18n>searchEq}" key="idSearchEq">
						<l:Grid defaultSpan="XL6 L6 M6 S12">
							<VBox>
								<Label text="{i18n>techId}" class="sapUiTinyMarginTop"></Label>
								<Input class="inputRadius" placeholder="{i18n>searchTechId}" submit="onSearchWOFilter" value="{mLookupModel>/TechId}" width="100%"></Input>
							</VBox>
							<VBox>
								<Label text="{i18n>equipId}" class="sapUiTinyMarginTop"></Label>
								<Input class="inputRadius" placeholder="{i18n>searchbyIDDes}" submit="onSearchWOFilter" value="{mLookupModel>/EqIdDes}"></Input>
							</VBox>
						</l:Grid>
						<ScrollContainer height="20rem" vertical="true" focusable="false"  class="sapUiSmallMarginTop">
							<Table class="tableCellNoBorder TableHeaderWhiteBG" sticky="ColumnHeaders" mode="SingleSelectLeft" selectionChange="onEquipSelect" growing="false" items="{path: 'mLookupModel>/aEquipmentsList'}">
								<columns>
									<Column>
										<Text text="{i18n>equipId}"/>
									</Column>
									<Column>
										<Text text="{i18n>techId}"/>
									</Column>
									<Column>
										<Text text="{i18n>EqDes}"/>
									</Column>
									<Column>
										<Text text="{i18n>FUN_LOC}"/>
									</Column>
								</columns>
								<items>
									<ColumnListItem>
										<cells >
											<Text text="{mLookupModel>Equnr}"/>
											<Text text="{mLookupModel>Tidnr}"/>
											<Text text="{mLookupModel>Eqktu}"/>
											<Text text="{mLookupModel>Tplnr}"/>
										</cells>
									</ColumnListItem>
								</items>
							</Table>
						</ScrollContainer>
					</IconTabFilter>
				</items>
			</IconTabBar>
		</content>
		<beginButton>
			<Button text="{i18n>CANCEL}" press="onCancelDialogEquip" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline"
				iconFirst="true"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>SEARCH}" press="onSearchWOFilter" type="Emphasized"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition >