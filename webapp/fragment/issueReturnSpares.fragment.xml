<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table">
	<Dialog title="{oWorkOrderDetailViewModel>/issueReturnDialogHeader}" class="sapUiSizeCompact dialogHeader" contentWidth="50%">
		<content>
			<l:Grid defaultSpan="XL6 L6 M4 S12" class="sapUiTinyMargin">
				<VBox>
					<Label text="{i18n>DOC_DATE}" class="sapUiTinyMarginBegin">
					</Label>
					<DatePicker class="inputRadius" placeholder="dd-MM-yyyy" dateValue="{oWorkOrderDetailViewModel>/DocDate}" displayFormat="dd-MM-yyyy"
						valueFormat="yyyy-MM-ddTHH:mm:ss" width="100%">
						<customData>
							<core:CustomData key="dateType" value="DocDate"/>
						</customData>
					</DatePicker>
				</VBox>
				<VBox>
					<Label text="{i18n>POSTING_DATE}" class="sapUiTinyMarginBegin">
					</Label>
					<DatePicker placeholder="dd-MM-yyyy" dateValue="{oWorkOrderDetailViewModel>/PstngDate}" displayFormat="dd-MM-yyyy"
						valueFormat="yyyy-MM-ddTHH:mm:ss" width="100%" class="inputRadius">
						<customData>
							<core:CustomData key="dateType" value="PstngDate"/>
						</customData>
					</DatePicker>
					
				</VBox>
			</l:Grid>
