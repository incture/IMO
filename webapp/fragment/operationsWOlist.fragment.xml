<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" class="sapUiSizeCompact" xmlns:table="sap.ui.table">
	<Dialog contentHeight="70%" contentWidth="70%" title="Select Operations" class="sapUiSizeCompact">
		<content>
			<table:Table selectionMode="MultiToggle" rows="{/Operations}">
				<table:columns>
					<table:Column defaultFilterOperator="Contains">
						<Label text="{i18n>operation}"/>
						<table:template>
							<Text text="{OPRN}"></Text>
						</table:template>
					</table:Column>
					<table:Column >
						<Label text="{i18n>SUB_OP}"/>
						<table:template>
							<Text text="{SUB OP}"></Text>
						</table:template>
					</table:Column>
					<table:Column >
						<Label text="{i18n>WORK_CENTER}"/>
						<table:template>
							<Text text="{WCENTER}"></Text>
						</table:template>
					</table:Column>
					<table:Column >
						<Label text="{i18n>PLANT}"/>
						<table:template>
							<Text text="{PLANT}"></Text>
						</table:template>
					</table:Column>
					<table:Column>
						<Label text="{i18n>C_KEY}"/>
						<table:template>
							<Text text="{CKEY}"></Text>
						</table:template>
					</table:Column>
					<table:Column >
						<Label text="{i18n>SHORT_TEXT}"/>
						<table:template>
							<Text text="{STEXT}"></Text>
						</table:template>
					</table:Column>
					<table:Column>
						<Label text="{i18n>ACTUAL_WORK}"/>
						<table:template>
							<Text text="{AWORK}"></Text>
						</table:template>
					</table:Column>
					<table:Column >
						<Label text="{i18n>WORK}"/>
						<table:template>
							<Text text="{WORK}"></Text>
						</table:template>
					</table:Column>
					<table:Column >
						<Label text="{i18n>UNITS}"/>
						<table:template>
							<Text text="{UNITS}"></Text>
						</table:template>
					</table:Column>
					<table:Column>
						<Label text="{i18n>NUMBER}"/>
						<table:template>
							<Text text="{NUM}"></Text>
						</table:template>
					</table:Column>
				</table:columns>
			</table:Table>
		</content>
		<beginButton>
			<Button text="{i18n>CANCEL}" press="onCancelDialogOperns" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline" iconFirst="true"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>select}" press="onSelectWOFilter" type="Emphasized"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition >