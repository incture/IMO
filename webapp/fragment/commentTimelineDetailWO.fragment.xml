	<!--<IconTabFilter text="{i18n>ATTACHMENTS}"
				visible="{parts:['oWorkOrderDetailModel>/OrderStatus','oWorkOrderDetailModel>/Orderid'] , formatter:'com.sap.incture.IMO_PM.formatter.formatter.setAttachmentsTabVisible'}">-->
	<OverflowToolbar class="createNotifOverflowBorder sapUiTinyMarginBottom">
		<Label design="Bold" text="Attachments" wrapping="true"/>
		<ToolbarSpacer/>
		<core:Icon src="sap-icon://decline" tooltip="Close Attachments" press="onPressBackWO" color="#142e5e"
			class="attachmentsIconSize sapUiSmallMarginEnd"/>
		<layoutData>
			<l:GridData span="XL12 L12 M12 S12"></l:GridData>
		</layoutData>
	</OverflowToolbar>
	<FlexBox alignItems="Start" justifyContent="SpaceBetween">
		<u:FileUploader id="MYLAN_CREATE_WO_FILEUPLOADER" buttonOnly="true" change="onUploadAttachment" useMultipart="false"
			uploadComplete="onUploadComplete" buttonText="{i18n>WORDK_DETAIL_ADD_DOCUMENT}" sendXHR="true" multiple="false"
			fileType="jpg,pdf,jpeg,xlsx,xls,png,docx" maximumFilenameLength="50" typeMissmatch="fnHandleFileType" sameFilenameAllowed="true"
			enabled="{path:'oWorkOrderDetailModel>/OrderStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.disableUploadAttachment'}"
			class="tableHeadertansparentBtn" tooltip="{i18n>UPLOAD_DOCS}" uploadOnChange="false" filenameLengthExceed="fnFilenameLengthExceed"/>
		<Button text="{i18n>WORK_ORDER_ADD_LINK}" class="tableHeadertansparentBtn" press="onOpenAttchWOlinkPopup" tooltip="{i18n>ADD_LINKS}"
			enabled="{path:'oWorkOrderDetailModel>/OrderStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.disableUploadAttachment'}"/>
	</FlexBox>
	<VBox items="{oWorkOrderDetailViewModel>/attachments}" class="sapUiTinyMarginTop">
		<VBox class="sapUiTinyMargin">
			<VBox fitContainer="true" alignContent="Start" width="100%">
				<HBox width="70%">
					<core:Icon src="{path:'oWorkOrderDetailViewModel>FileExtension', formatter:'.formatter.setIconForFile'}" tooltip="{}" size="1.5rem"
						class="sapMCommonBlueColor"/>
					<VBox class="sapUiSmallMarginBegin" width="90%">
						<Link text="{oWorkOrderDetailViewModel>DocName}" press="getAttachmentIdForDownload" class="sapMAttachmentLink" wrapping="true"
							visible="{= ${oWorkOrderDetailViewModel>AttachmentType} === 'DOC' ? true : false}" width="90%"/>
						<Link text="{oWorkOrderDetailViewModel>DocName}" target="_blank" class="sapMAttachmentLink" wrapping="true"
							visible="{= ${oWorkOrderDetailViewModel>AttachmentType} === 'URL' ? true : false}" width="90%"
							tooltip="{path:'oWorkOrderDetailViewModel>AttachmentURL', formatter:'.formatter.formatHyperLink'}"
							href="{path:'oWorkOrderDetailViewModel>AttachmentURL', formatter:'.formatter.formatHyperLink'}"/>
					</VBox>
				</HBox>
				<VBox class="sapUiSmallMarginTop">
					<HBox visible="{= ${oWorkOrderDetailViewModel>AttachmentType} === 'DOC' ? true : false}">
						<Text text="{i18n>ATTACHMENTS_UPLOADED_BY}: " class="labelText"/>
						<Text text="{oWorkOrderDetailViewModel>CreatedByName}" class="sapUiTinyMarginBegin styleName"/>
					</HBox>
					<HBox visible="{= ${oWorkOrderDetailViewModel>AttachmentType} === 'URL' ? true : false}">
						<Text text="Attached By: " class="labelText"/>
						<Text text="{oWorkOrderDetailViewModel>CreatedByName}" class="sapUiTinyMarginBegin styleName"/>
					</HBox>
					<HBox alignItems="Center" justifyContent="SpaceBetween">
						<VBox>
							<HBox visible="{= ${oWorkOrderDetailViewModel>AttachmentType} === 'DOC' ? true : false}">
								<Text text="{i18n>ATTACHMENTS_UPLOADED_ON}: " class="labelText"/>
								<Text
									text="{path: 'oWorkOrderDetailViewModel>CreatedDate', type: 'sap.ui.model.type.Date', formatOptions: { source: { pattern: 'yyyy-MM-dd HH:mm:ss' }, pattern: 'dd MMM yyyy' }}"
									class="sapUiTinyMarginBegin styleName"/>
							</HBox>
							<HBox visible="{= ${oWorkOrderDetailViewModel>AttachmentType} === 'URL' ? true : false}">
								<Text text="Attached On: " class="labelText"/>
								<Text
									text="{path: 'oWorkOrderDetailViewModel>CreatedDate', type: 'sap.ui.model.type.Date', formatOptions: { source: { pattern: 'yyyy-MM-dd HH:mm:ss' }, pattern: 'dd MMM yyyy' }}"
									class="sapUiTinyMarginBegin styleName"/>
							</HBox>
						</VBox>
						<HBox>
							<Button icon="sap-icon://download" tooltip="Download" type="Transparent"
								visible="{= ${oWorkOrderDetailViewModel>AttachmentType} === 'DOC' ? true : false}" press="getAttachmentIdForDownload">
								<customData>
									<core:CustomData value="{oWorkOrderDetailViewModel>AttachmentType}"/>
								</customData>
							</Button>
							<Button icon="sap-icon://delete" tooltip="Delete" type="Transparent"
								enabled="{path:'oWorkOrderDetailModel>/OrderStatus', formatter:'com.sap.incture.IMO_PM.formatter.formatter.disableUploadAttachment'}"
								visible="{parts:['oWorkOrderDetailViewModel>AttachmentType', 'oWorkOrderDetailModel>/OrderStatus'], formatter:'.formatter.setAttachmentDeleteVisible'}"
								press="fnDeleteWOAttachmentLink">
								<customData>
									<core:CustomData value="{oWorkOrderDetailViewModel>AttachmentType}"/>
								</customData>
							</Button>
						</HBox>
					</HBox>
				</VBox>
