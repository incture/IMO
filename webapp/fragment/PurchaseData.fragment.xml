<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" class="sapUiSizeCompact" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table">
	<Dialog title="{}" contentWidth="40%" contentHeight="60%" showHeader="false" verticalScrolling="false" class="sapUiSizeCompact">
		<Page title="{i18n>SP_Pur_Data}" showHeader="true" titleAlignment="Center">
			<content>
				<Panel expanded="true" expandable="true" class="sapMTextPanelClass">
					<headerToolbar>
						<Toolbar>
							<Text text="{i18n>SPARE_Part}" class="sapUiMediumMarginBegin sapMCommonBlueColor"></Text>
						</Toolbar>
					</headerToolbar>
					<content>
						<l:Grid defaultSpan="XL6 L6 M8 S12" vSpacing="2">
							<VBox>
								<Label text="{i18n>SP_Req_Quant}"/>
								<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/RequirementQuantity}"
									tooltip="{oWorkOrderDetailViewModel>/oComponentDetails/RequirementQuantity}" class="inputRadius"></Input>
							</VBox>
							<VBox>
								<Label text="{i18n>SP_Sort_String}"/>
								<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/SortStr}" tooltip="{oWorkOrderDetailViewModel>/oComponentDetails/SortStr}"
									class="inputRadius"></Input>
							</VBox>
							<VBox class="sapUiSmallMarginTop">
								<Label text="Price"></Label>
								<HBox>
									<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/Price}" width="100%"></Input>
									<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/Currency}" width="100%"></Input>
								</HBox>
							</VBox>
							<VBox class="sapUiSmallMarginTop">
								<Label text="Per"></Label>
								<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/PriceUnit}"></Input>
							</VBox>
							<VBox class="sapUiSmallMarginTop">
								<Label text="Material Group"></Label>
								<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/MaterialGroup}"></Input>
								<layoutData>
									<l:GridData span="XL6 L6 M12 S12"/>
								</layoutData>
							</VBox>
							<VBox class="sapUiSmallMarginTop ">
								<Label text="{i18n>PR_COST_ELEMENT}"></Label>
								<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/GlAccount}"></Input>
								<layoutData>
									<l:GridData span="XL6 L6 M12 S12"/>
								</layoutData>
							</VBox>
							<VBox class="sapUiSmallMarginTop">
								<Label text="Purch. Group"></Label>
								<HBox>
									<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/PurchGrp}" width="100%"></Input>
									<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/PurchOrg}" width="100%"></Input>
								</HBox>
							</VBox>
							<VBox class="sapUiSmallMarginTop">
								<Label text="Vendor"></Label>
								<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/VendorNo}"></Input>
							</VBox>
							<VBox class="sapUiSmallMarginTop">
								<Label text="Agreement"></Label>
								<HBox>
									<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/Agreement}" width="100%"></Input>
									<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/AgmntItem}" width="100%"></Input>
								</HBox>
							</VBox>
							<VBox class="sapUiSmallMarginTop">
								<Label text="Recipient"></Label>
								<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/Recipient}"></Input>
							</VBox>
							<VBox class="sapUiSmallMarginTop">
								<Label text="Requisitioner"></Label>
								<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/Requisitioner}"></Input>
							</VBox>
						</l:Grid>
					</content>
				</Panel>
				<Panel expanded="true" expandable="true" class="sapMTextPanelClass">
					<headerToolbar>
						<Toolbar>
							<Text text="{i18n>SP_Act_Data}" class="sapUiMediumMarginBegin sapMCommonBlueColor"></Text>
						</Toolbar>
					</headerToolbar>
					<content>
						<l:Grid defaultSpan="XL6 L6 M8 S12">
							<VBox>
								<Label text="{i18n>SP_PurchaseReq}"/>
								<HBox>
									<Input value="{oWorkOrderDetailViewModel>/oComponentDetails/PreqNo}" editable="false"
										tooltip="{oWorkOrderDetailViewModel>/oComponentDetails/PreqNo}" class="inputRadius"></Input>
									<Input value="{path:'oWorkOrderDetailViewModel>/oComponentDetails/PreqItem'}" editable="false"
										tooltip="{oWorkOrderDetailViewModel>/oComponentDetails/PreqItem}" class="inputRadius"></Input>
								</HBox>
								<HBox>
									<CheckBox text="{i18n>PO_STATUS}" editable="false"/>
								</HBox>
								<layoutData>
									<l:GridData span="XL12 L12 M12 S12"/>
								</layoutData>
							</VBox>
						</l:Grid>
					</content>
				</Panel>
			</content>
			<footer>
				<Toolbar>
					<ToolbarSpacer/>
					<Button class="transparentBtn createNotifClearBtn" text="Save" press="onSavePurData"/>
					<Button class="transparentBtn createNotifClearBtn" icon="sap-icon://decline" iconFirst="true" text="Cancel" press="onClosePurData"/>
				</Toolbar>
			</footer>
		</Page>
	</Dialog>
</core:FragmentDefinition>