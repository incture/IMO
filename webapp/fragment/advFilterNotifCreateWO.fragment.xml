<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form">
	<!--<Dialog  contentWidth="40%" title="{i18n>adFilter}" class="dialogHeader sapUiSizeCompact">
		<content>-->
	<l:Grid defaultSpan="XL2 L2 M2 S2">
		<VBox class="sapUiTinyMargin">
			<Label text="{i18n>stat}" class="sapUiTinyMarginTop"/>
			<!--<Input class="inputRadius" width="100%" value="{mLookupModel>/sNotifStatusFilter}"></Input>-->
			<ComboBox  class="inputRadius" width="100%" selectedKey="{mLookupModel>/sNotifStatusFilter}" showSecondaryValues="true"
				enabled="true" tooltip="System Status">
				<items>
					<core:ListItem key="OSNO" text="OSNO"/>
					<core:ListItem key="NOPR" text="NOPR"/>
				</items>
			</ComboBox>
		</VBox>
		<VBox class="sapUiTinyMargin">
			<Label text="{i18n>notifID}" class="sapUiTinyMarginTop"/>
			<Input class="inputRadius" width="100%" value="{mLookupModel>/sNotifIdFilter}"></Input>
		</VBox>
		<VBox class="sapUiTinyMargin">
			<Label text="{i18n>equip}" class="sapUiTinyMarginTop"/>
			<Input class="inputRadius" width="100%" showValueHelp="true" value="{mLookupModel>/sNotifEquipFilter}" valueHelpRequest="equipmentValueHelp"></Input>
		</VBox>
		<VBox class="sapUiTinyMargin">
			<Label text="{i18n>breakDown}" class="sapUiTinyMarginTop"/>
			<ComboBox class="inputRadius" width="100%" items="{ path: 'mLookupModel>/aBDown'}" selectedKey="{mLookupModel>/sNotifBDFilter}">
				<core:ListItem key="{mLookupModel>des}" text="{mLookupModel>des}"/>
			</ComboBox>
		</VBox>
		<VBox class="sapUiTinyMargin">
			<Label text="{i18n>WORK_CENTER}" class="sapUiTinyMarginTop"></Label>
			<ComboBox class="inputRadius" width="100%" showSecondaryValues="true" items="{path:'mLookupModel>/aWorkCenterSet',sorter:{ path: 'text' }}"
				selectedKey="{mLookupModel>/sNotifWkCenterFilter}">
				<core:ListItem key="{mLookupModel>WorkcenterId}" additionalText="{mLookupModel>WorkcenterDesc}" text="{mLookupModel>WorkcenterId}"/>
			</ComboBox>
		</VBox>
	</l:Grid>
	<FlexBox alignItems="Start" justifyContent="End">
		<Button width="4rem" text="Clear" press="onClearNotifFilter" type="Transparent"/>
		<Button width="4rem" text="{i18n>save}" press="onSaveNotifFilter"
			class="sapUiSmallMarginEnd sapUiSmallMarginBottom tableHeadertansparentBtn"/>
		<Button width="4rem" text="{i18n>done}" press="onApplyFilterNotif" type="Emphasized" class="sapUiSmallMarginEnd sapUiSmallMarginBottom"/>
	</FlexBox>
