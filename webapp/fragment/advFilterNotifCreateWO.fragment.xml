		<buttons>
			<Button text="{i18n>cancel}" press="onCancelDialogNotif" class="murphyClearBtn"/>
			<Button text="{i18n>CLEAR}" press="onClearNotifFilter" class="murphyClearBtn"/>
			<Button text="{i18n>save}"  press="onSaveNotifFilter" class="murphyDialogBtn"/>
