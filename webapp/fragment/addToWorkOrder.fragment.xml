				<footer>
					<Toolbar>
						<ToolbarSpacer/>
						<Button text="{i18n>CANCEL}" press="onCancelDialogOperns" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline" iconFirst="true"/>
						<Button text="{i18n>Update}" press="onUpdate" type="Emphasized"/>
					</Toolbar>
				</footer>
			</Page>
		</NavContainer>
	</Dialog>
