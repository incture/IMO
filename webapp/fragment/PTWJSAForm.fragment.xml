									<Title text="{dashBoardModel>header}" textAlign="Center" width="100%" class="sapUiTinyMarginTop sapUiTinyMarginBegin iopPtwTitleClass" wrapping="true"/>
								</HBox>
								<HBox width="20%">
									<CheckBox selected="{path:'dashBoardModel>headerSelected', formatter:'com.sap.incture.Incture_IOP.util.formatter.JSACheckBox'}" editable="false"
										class="checkBox"/>
								</HBox>
							</HBox>
							<VBox items="{dashBoardModel>aList}" class="ptwBoxTopBorder">
								<HBox class="sapUiTinyMarginBottom">
									<CheckBox editable="false" selected="{path:'dashBoardModel>selected', formatter:'com.sap.incture.Incture_IOP.util.formatter.JSACheckBox'}"/>
									<Text text="{dashBoardModel>Text}" wrapping="true" class="sapUiTinyMarginTop sapUiTinyMarginEnd"/>
								</HBox>
							</VBox>
						</VBox>
					</CustomListItem>
				</f:GridList>
				<HBox class="border sapUiSmallMarginBegin sapUiSmallMarginEnd" alignContent="Center" justifyContent="Center" alignItems="Center">
					<ObjectStatus
						text="NOTE: If the work scope or conditions change significantly, STOP THE JOB. Revise the JSA to address all hazards before proceeding."
						class="sapUiTinyMarginTop sapUiTinyMarginBottom"/>
				</HBox>
				<HBox alignContent="Center" justifyContent="Center" alignItems="Center">
					<ObjectStatus text="Complete Task Steps / Potential Hazards / Hazard Controls PRIOR to the JSA Review" class="sapUiTinyMarginTop"/>
				</HBox>
				<l:HorizontalLayout class="sapUiSmallMargin border">
					<ScrollContainer vertical="true" height="20rem" horizontal="false">
						<Table items="{dashBoardModel>/ptwJsaDetails/TOJSASTEPS}" class="ptwTableBorderClass" sticky="ColumnHeaders">
							<columns>
								<Column hAlign="Center" vAlign="Middle">
									<VBox alignContent="Center" alignItems="Center">
										<Text text="TASK STEPS" class="ptwFontColor"/>
										<Text text="(What are you doing?)" class="ptwFontColor"></Text>
									</VBox>
								</Column>
								<Column hAlign="Center" vAlign="Middle">
									<VBox alignContent="Center" alignItems="Center">
										<Text text="POTENTIAL HAZARDS" class="ptwFontColor"/>
										<Text text="(What could go wrong?)" class="ptwFontColor"></Text>
									</VBox>
								</Column>
								<Column hAlign="Center" vAlign="Middle">
									<VBox alignContent="Center" alignItems="Center">
										<Text text="HAZARD CONTROLS" class="ptwFontColor"/>
										<Text text="(How can harm be prevented?)" class="ptwFontColor"></Text>
									</VBox>
								</Column>
								<Column hAlign="Center" vAlign="Middle">
									<VBox alignContent="Center" alignItems="Center">
										<Text text="PERSON RESPONSIBLE" class="ptwFontColor"/>
										<Text text="Name" class="ptwFontColor"></Text>
									</VBox>
								</Column>
							</columns>
							<items>
								<ColumnListItem>
									<cells>
										<Text text="{path:'dashBoardModel>taskSteps',formatter:'com.sap.incture.Incture_IOP.util.formatter.PtwTextDecode'}"/>
										<Text text="{path:'dashBoardModel>potentialHazards',formatter:'com.sap.incture.Incture_IOP.util.formatter.PtwTextDecode'}"/>
										<Text text="{path:'dashBoardModel>hazardControls',formatter:'com.sap.incture.Incture_IOP.util.formatter.PtwTextDecode'}"/>
										<Text text="{path:'dashBoardModel>personResponsible',formatter:'com.sap.incture.Incture_IOP.util.formatter.PtwTextDecode'}"/>
									</cells>
								</ColumnListItem>
							</items>
						</Table>
					</ScrollContainer>
				</l:HorizontalLayout>
				<HBox class="sapUiSmallMarginBegin">
					<ObjectStatus text="STOP THE JOB" state="Error" class="textUndelineColor Textunderline"></ObjectStatus>
					<Label text="Triggers – I / We will stop the job if any of the following occur:" class="sapUiTinyMarginBegin"></Label>
				</HBox>
				<VBox width="97.5%" class="sapUiSmallMargin border">
					<ScrollContainer height="8rem" horizontal="false" vertical="true">
						<VBox items="{dashBoardModel>/ptwJsaDetails/TOJSASTOP}">
							<Input class="sapUiTinyMarginBegin sapUiTinyMarginEnd" width="98.8%" editable="false"
								value="{path:'dashBoardModel>lineDescription',formatter:'com.sap.incture.Incture_IOP.util.formatter.PtwTextDecode'}"></Input>
						</VBox>
					</ScrollContainer>
				</VBox>
			</VBox>
		</ScrollContainer>
	</Dialog>
</core:FragmentDefinition>