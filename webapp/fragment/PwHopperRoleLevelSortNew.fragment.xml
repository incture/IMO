<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout">
	<Popover placement="Bottom" title="Filter">
		<l:VerticalLayout width="12rem">
			<f:SimpleForm editable="true" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="2" emptySpanM="2" columnsM="8"
				columnsL="8" ariaLabelledBy="idOverviewFilter">
				<f:content>
					<Label text="POT"/>
					<ComboBox items="{dashBoardModel>/pwHopperSortData/statuses}" selectionChange="selectionChangePwHopperFilter">
						<core:ListItem key="{dashBoardModel>key}" text="{dashBoardModel>text}"/>
					</ComboBox>
					<Label text="RE"/>
					<ComboBox items="{dashBoardModel>/pwHopperSortData/statuses}" selectionChange="selectionChangePwHopperFilter">
						<core:ListItem key="{dashBoardModel>key}" text="{dashBoardModel>text}"/>
					</ComboBox>
					<Label text="WW"/>
					<ComboBox items="{dashBoardModel>/pwHopperSortData/statuses}" selectionChange="selectionChangePwHopperFilter">
						<core:ListItem key="{dashBoardModel>key}" text="{dashBoardModel>text}"/>
					</ComboBox>
					<Label text="ALS"/>
					<ComboBox items="{dashBoardModel>/pwHopperSortData/statuses}" selectionChange="selectionChangePwHopperFilter">
						<core:ListItem key="{dashBoardModel>key}" text="{dashBoardModel>text}"/>
					</ComboBox>
				</f:content>
			</f:SimpleForm>
		</l:VerticalLayout>
	</Popover>
</core:FragmentDefinition>