<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
	xmlns:l="sap.ui.layout" class="sapUiSizeCompact">
	<Dialog contentHeight="50%" contentWidth="30%" title="{i18n>notificationComment}" verticalScrolling="false">
		<content>
			<ScrollContainer height="15rem" vertical="true" horizontal="false">
				<Text text="{mLookupModel>/NotifLText}" wrapping="true"/>
			</ScrollContainer>
		</content>
		<beginButton>
			<Button text="Close" press="onCancel" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline" iconFirst="true"/>
		</beginButton>
	</Dialog>
</core:FragmentDefinition >