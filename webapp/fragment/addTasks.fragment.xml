<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table">
	<Dialog title="{i18n>ADD_TASKS}" class="sapUiSizeCompact dialogHeader" contentWidth="40%">
		<content>
			<ui:Table rows="{oWorkOrderDetailViewModel>/operHeaderSet}" selectionMode="Single" selectionBehavior="Row" visibleRowCount="8"
				class="sapUiSmallMargin tableCellNoBorder TableHeaderWhiteBG" enableSelectAll="false" rowSelectionChange="onSelectTaskHeader">
				<ui:columns>
					<ui:Column filterProperty="Plnnr" sortProperty="Plnnr" defaultFilterOperator="Contains" width="20%">
						<Label text="{i18n>taskgrp}" class="tableHeaderText"/>
						<ui:template>
							<Text text="{oWorkOrderDetailViewModel>Plnnr}" class="tableContentText"/>
						</ui:template>
					</ui:Column>
					<ui:Column filterProperty="Plnal" sortProperty="Plnal" defaultFilterOperator="Contains"  width="25%">
						<Label text="Group Counter" class="tableHeaderText"/>
						<ui:template>
							<Text text="{oWorkOrderDetailViewModel>Plnal}" class="tableContentText"/>
						</ui:template>
					</ui:Column>
					<ui:Column filterProperty="Ktext" sortProperty="Ktext" defaultFilterOperator="Contains">
						<Label text="{i18n>taskdes}" class="tableHeaderText"/>
						<ui:template>
							<Text text="{oWorkOrderDetailViewModel>Ktext}" class="tableContentText"/>
						</ui:template>
					</ui:Column>
					
				</ui:columns>
			</ui:Table>
		</content>
		<buttons>
			<Button text="{i18n>CANCEL}" press="onCloseTaskListPopup" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline" iconFirst="true"></Button>
			<Button text="{i18n>ADD}" press="onAddOperationTaskList" type="Emphasized" icon="sap-icon://add" iconFirst="true" width="6rem"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>