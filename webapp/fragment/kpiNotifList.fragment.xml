<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:ui="sap.ui.table">
	<Dialog title="{mLookupModel>/kpiNotifHeader}" class="sapUiSizeCompact dialogHeader" contentWidth="45%">
		<content>
			<ui:Table rows="{mLookupModel>/kpiNotiflist}" selectionMode="Single" selectionBehavior="RowOnly" rowSelectionChange="getSelectedKPIsNotifs"
				visibleRowCount="8" class="sapUiSmallMargin tableCellNoBorder TableHeaderWhiteBG" enableSelectAll="false" id="NOTIF_KPI_LIST_TBL">
				<ui:columns>
					<ui:Column hAlign="Begin" filterProperty="Number" sortProperty="Number" defaultFilterOperator="Contains">
						<Label text="{i18n>noitifid}" design="Bold"/>
						<ui:template>
							<Text text="{mLookupModel>Number}"/>
						</ui:template>
					</ui:Column>
					<ui:Column hAlign="Begin" filterProperty="Description" sortProperty="Description" defaultFilterOperator="Contains">
						<Label text="{i18n>notifdes}" design="Bold"/>
						<ui:template>
							<Text text="{mLookupModel>Description}"/>
						</ui:template>
					</ui:Column>
				</ui:columns>
			</ui:Table>
		</content>
		<buttons>
			<Button text="{i18n>CANCEL}" press="closeKPINotifListPopover" class="transparentBtn createNotifClearBtn" icon="sap-icon://decline" iconFirst="true"></Button>
		</buttons>
	</Dialog>
</core:FragmentDefinition>